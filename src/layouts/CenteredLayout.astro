---
import Layout from './Layout.astro';

export interface Props {
	title: string;
}

const { title } = Astro.props;
---
<Layout title={title} navBarFixed={false}>
    <div class="centered">
        <slot />
    </div>
</Layout>

<style>
	.centered {
		width: 50%;
		margin: auto;
	}

    @media only screen and (max-width: 1000px) {
		.centered {
			width: 90%;
		}
	}
</style>


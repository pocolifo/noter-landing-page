---
import Footer from '../components/Footer.astro';
import NavigationBar from '../components/NavigationBar.astro';
export interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description">
		<meta name="viewport" content="width=device-width, initial-scale=1.0">
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<link href="https://fonts.cdnfonts.com/css/gt-super-ds-trial?styles=146779,146781" rel="stylesheet">
		<link href="https://fonts.cdnfonts.com/css/inter?styles=29135,29130" rel="stylesheet">
                
		<title>{title} | Noter</title>
	</head>
	<body>
        <NavigationBar />

        <main>
			<slot />
			<Footer />
		</main>

	</body>
</html>

<style>
	:global(body) {
        font-family: 'GT Super Ds Trial';
        margin: 0;
        padding: 0;
        font-weight: 300;

        background-size: 5vh 5vh;
        background-image:
            linear-gradient(to right, #eeeeee 1px, transparent 1px),
            linear-gradient(to bottom, #eeeeee 1px, transparent 1px);
	}
</style>
---
import Footer from '../components/Footer.astro';
import NavigationBar from '../components/NavigationBar.astro';
import DocumentHead from './DocumentMetadata.astro';

export interface Props {
	title: string;
	description: string;
	navBarFixed: boolean;
}

const { title, description, navBarFixed } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<DocumentHead title={title} description={description} />
	</head>
	
	<body>
		<NavigationBar fixed={navBarFixed} />

		<main>
			<slot />
		</main>
		
		<Footer />
	</body>
</html>

<style>
	:global(body) {
		font-family: 'Playfair Display';
		margin: 0;
		padding: 0;
		font-weight: 400;

		background-size: 5vh 5vh;
		background-image:
			linear-gradient(to right, #eeeeee 1px, transparent 1px),
			linear-gradient(to bottom, #eeeeee 1px, transparent 1px);
	}
</style>
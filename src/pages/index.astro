---
export const prerender = true;

import QuizSection from "../components/index/quiz/QuizSection.astro";
import ScreenTextSection from "../components/index/ScreenTextSection.astro";
import SummarizerSection from "../components/index/summarizer/SummarizerSection.astro";
import TypewriterSection from "../components/index/typewriter/TypewriterSection.astro";
import AutonoteSection from "../components/index/autonote/AutonoteSection.astro";
import GenerateStudyGuidesSection from "../components/index/generatestudyguide/GenerateStudyGuidesSection.astro";
import TakeNotesSection from "../components/index/takenotes/TakeNotesSection.astro";
import Layout from "../layouts/Layout.astro";
---
<Layout title="Ace your tests and quizzes with Noter, your AI-powered notebook."
        description="Noter, your AI-powered notebook for school, helps you ace your tests with auto-generated study guides, note summaries, and practice tests."
        navBarFixed={true}>
    <ScreenTextSection>
        <h1>Noter is your AI-powered notebook for school and study.</h1>
    </ScreenTextSection>

    <div class="sections">
        <TakeNotesSection />
        <AutonoteSection />
        <SummarizerSection />
        <QuizSection />
        <GenerateStudyGuidesSection />
        <TypewriterSection />
    </div>
</Layout>

<style>
    /* Alternate the text and animation sides */
    :global(section:nth-child(even) .text) {
        order: 2;
    }

    :global(section:nth-child(odd) .text) {
        text-align: right;
    }

	@media only screen and (max-width: 1000px) {
        :global(section:nth-child(even) .text) {
            order: 1;
        }

        :global(section:nth-child(odd) .text) {
            text-align: center;
        }
    }
</style>
---
import Link from "./Link.astro";

---

<nav>
    <div class="inner">
        <h1>Noter.</h1>

        <div class="right">
            <Link href="/subscribe">Subscribe</Link>
        </div>
    </div>
</nav>

<style>
    nav {
        top: 0;
        width: 100%;
        font-size:1.5em;
        position: fixed;
        border-bottom: #000000 2px solid;
        z-index: 100000;
        background: #ffffff;
    }
    
    nav .inner {
        margin: auto;
        width: 95%;
        display: flex;
        align-items: center;
    }

    nav .right {
        margin-left: auto;
    }

    @media only screen and (max-width: 1000px) {
        nav {
            font-size: 1.5em;
        }
    }
</style>
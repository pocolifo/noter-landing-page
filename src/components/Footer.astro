<style>
    footer {
        font-size: max(1.5em, 1vw);
        width: 100%;
        background: #ffffff;
        border-top: 2px solid #000000;
    }

    footer .inner {
        width: 75%;
        margin: auto;
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
        padding-top: 2.5rem;
        padding-bottom: 2.5rem;
        gap: 3rem;
    }

    .socials {
        display: flex;
        gap: 1rem;
    }

    .socials .icon {
        width: 2rem;
        height: 2rem;
        color: #000000;
        transition: color 0.1s linear;
    }
    
    .socials .icon:hover {
        color: #0ea5e9;
    }

    ul {
        list-style-type: none;
        padding: 0;
        gap: 1rem;
    }
    
    ul li {
        margin-bottom: 1rem;
    }
</style>